<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="UITheme.Button">
    <item name="android:textAppearance">@style/UITheme.Typography.Label</item>
    <item name="android:minHeight">56dp</item>
    <item name="android:minWidth">256dp</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:background">@drawable/primary_button_background</item>
    <item name="android:elevation">0dp</item>
    <item name="android:textColor">@color/primary_button_text_color</item>
    <item name="android:gravity">center</item>
    <item name="iconTint">@color/content_inverse_primary</item>
    <item name="drawableTint">@color/content_inverse_primary</item>
    <item name="backgroundTint">@null</item>
  </style>

  <style name="UITheme.Button.Secondary">
    <item name="android:background">@drawable/secondary_button_background</item>
    <item name="android:textColor">@color/secondary_button_text_color</item>
    <item name="drawableTint">@color/secondary_button_text_color</item>
  </style>

  <style name="UITheme.Button.Tertiary">
    <item name="android:background">@drawable/tertiary_button_background</item>
    <item name="android:textColor">@color/tertiary_button_text_color</item>
    <item name="drawableTint">@color/tertiary_button_text_color</item>
  </style>

  <style name="UITheme.Button.IconOnly">
    <item name="iconPadding">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:minWidth">48dp</item>
    <item name="android:minHeight">48dp</item>
    <item name="android:maxWidth">48dp</item>
    <item name="android:maxHeight">48dp</item>
    <item name="iconTint">@color/primary_button_text_color</item>
  </style>

  <style name="UITheme.Button.IconOnly.Secondary">
    <item name="android:background">@drawable/secondary_button_background</item>
    <item name="iconTint">@color/secondary_button_text_color</item>
  </style>

  <style name="UITheme.Button.IconOnly.Tertiary">
    <item name="android:background">@drawable/tertiary_button_background</item>
    <item name="iconTint">@color/tertiary_button_text_color</item>
  </style>
</resources>